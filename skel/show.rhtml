<%# show.rhtml $Revision: 1.2 $ %>
<%%=navi%%><%%update_proc%%>

<h1><%= @html_title %> [更新完了]</h1>
<% unless @diary.visible? then %><p class="message">この日の日記は現在【非表示】になっています。</p><% end %>
<%
param = {
	'date_format' => @date_format,
	'index' => @index,
	'section_anchor' => @section_anchor,
	'comment_anchor' => @comment_anchor,
	'long_mode' => true,
	'show_referer' => true,
	'referer_limit' => 100,
	'referer_table' => @referer_table,
	'show_comment' => true,
	'comment_limit' => 100,
	'multi_user' => @multi_user,
	'hide_comment_form' => true,
} %>
<%= @diary.eval_rhtml( param, PATH ) %>

<form method="post" action="<%= @update %>">
<input type="hidden" name="year" value="<%= @date.year %>">
<input type="hidden" name="month" value="<%= @date.mon %>">
<input type="hidden" name="day" value="<%= @date.mday %>">
<p><input type="submit" tabindex="1" accesskey="E" name="edit" value=" 再編集 "></p>
</form>
<hr class="sep">
