{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug tDiary",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/bin/tdiary",
            "args": [
                "server", "-p", "9292"
            ],
            "useBundler": true
        },
        {
            "name": "RSpec - all",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "bundle",
            "args": [
                "exec", "rake", "spec"
            ],
            "useBundler": true
        }
    ]
}
